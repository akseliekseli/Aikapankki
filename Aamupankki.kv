<Aamupankki>:
    FloatLayout:
        canvas:
            Color:
                rgba: 0.1,1,0.01, 0.5
            Rectangle:
                pos: self.pos
                size: self.size
        GridLayout:
            spacing: 5
            padding: 5
            rows: 4
            size_hint: 1, 1
            Label:
                font_size: 20
                text: "Tulenjohtolinjan aikapankissa"
            Label:
                font_size: 150
                text: root.tulos
            Label:    
                font_size: 20
                text: "Aamuja oppilaille! :D"   
            Label:
                text: "" 
        GridLayout:
            cols: 2
            pos_hint: {"bottom": 1, "left": 1}
            size_hint: .5, .2
            padding: 20
            spacing: 10
            Button:
                
                text: 'Paluu'
                on_press:
                    app.change_screen('alku_valikko')